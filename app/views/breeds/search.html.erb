
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bolder fst-italic text-warning" href="<%= breeds_path %>">Doggy Finder</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarLinks">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarLinks">
                <ul class="navbar-nav me-auto fw-bold text-uppercase small">
                    <li class="nav-item px-3">
                        <a class="nav-link active" href="<%= breeds_path %>">Breeds</a>
                    </li>
                    <li class="nav-item px-3">
                        <a class="nav-link" href="<%= categories_path %>">Categories</a>
                    </li>
                    <li class="nav-item px-3">
                        <a class="nav-link" href="<%= about_path %>">About</a>
                    </li>
                </ul>
                <form class="d-lg-flex" action="<%= search_breeds_path %>" method="get" accept-charset="UTF-8">
                    <select class="select form-select me-2 text-uppercase my-1" id="firstInput" name="categories">
                        <option value="" selected>Choose a Category</option>
                        <% @categories.each do |category| %>
                            <% if category.breed_type == "master_has_sub" %>
                                <option value="<%= category.id %>"><%= category.category_name %></option>
                            <% end %>
                        <% end %>
                    </select>
                    <input class="form-control me-2 my-1" id="secondInput" name="keywords" type="search" placeholder="NAME">
                    <button class="btn btn-success text-uppercase my-1" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>
    <!-- CONTENT -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-8 mt-5 mb-5 border border-dark rounded-3 p-3">
                <h1 class="fst-italic fw-bold">Search
                <% if @breeds.count > 1 || @breeds.count === 0 %>
                    Results
                <% else %>
                    Result
                <% end %></h1>
                <h5 class="text-muted fst-italic">Found <%= pluralize(@breeds.count, 'Result') %> when searching for "<%= params[:keywords] %>"</h5>
                <hr>
                <div class="mt-5 fs-5">
                    <ul>
                        <% @breeds.each do |breed| %>
                                <li class="category_name"><%= link_to breed.breed_name, breed, class: "text-capitalize" %></li>
                        <% end %>
                    </ul>
                </div>
                <%= link_to "Back to Breeds", breeds_path, class: "btn btn-primary mt-5" %>
            </div>
        </div>
    </div>
