<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-light shadow-sm">
    <div class="container-fluid">
        <a class="navbar-brand fw-bolder fst-italic text-warning" href="<%= breeds_path %>">Doggy Finder</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarLinks">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarLinks">
            <ul class="navbar-nav me-auto fw-bold text-uppercase small">
                <li class="nav-item px-3">
                    <a class="nav-link active" href="<%= breeds_path %>">Breeds</a>
                </li>
                <li class="nav-item px-3">
                    <a class="nav-link" href="<%= categories_path %>">Categories</a>
                </li>
                <li class="nav-item px-3">
                    <a class="nav-link" href="<%= about_path %>">About</a>
                </li>
            </ul>
            <form class="d-lg-flex" action="<%= search_breeds_path %>" method="get" accept-charset="UTF-8">
                <select class="select form-select me-2 text-uppercase my-1" id="firstInput" name="categories">
                    <option value="" selected>Choose a Category</option>
                    <% @categories.each do |category| %>
                        <% if category.breed_type == "master_has_sub" %>
                            <option value="<%= category.id %>"><%= category.category_name %></option>
                        <% end %>
                    <% end %>
                </select>
                <input class="form-control me-2 my-1" id="secondInput" name="keywords" type="search" placeholder="NAME">
                <button class="btn btn-success text-uppercase my-1" type="submit">Search</button>
            </form>
        </div>
    </div>
</nav>
<!-- CONTENT -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-10 mt-5 mb-5 border rounded-3 p-3">
            <h1 class="fst-italic fw-bold text-capitalize">
                <% if @breed.breed_type == "sub" %>
                    <%= @breed.breed_name %> <%= @breed.category.category_name %>
                <% else %>
                    <%= @breed.category.category_name %>
                <% end %>
            </h1>
            <hr>
            <div class="mt-5 fs-5 text-center">
                <p><%= image_tag @breed.image_url, class:"img-fluid rounded-3", id: "breed_image", alt: @breed.breed_name %></p>
                <h5 class="text-capitalize"><b class="text-primary">Master Breed: </b><%= @breed.category.category_name %></h5>
                <% if @breed.breed_type == "sub"  %>
                    <h5 class="text-capitalize"><b class="text-warning">Sub-Breed: </b><%= @breed.breed_name %></h5>
                <% end %>
            </div>
            <hr class="mt-5">
            <div class="ms-md-5">
                <h4 class="text-center fst-italic fw-bold mb-3">More Information</h4>
                <h5 class="text-capitalize"><b class="text-info">Sound: </b>"<%= @breed.breed_sound %>"</h5>
                <h5 class="text-capitalize"><b class="text-info">Meme Phrase: </b>"<%= @breed.breed_meme_phrase %>"</h5>
                <h5 class="text-capitalize"><b class="text-info">Coat Length: </b><%= @breed.breed_coat_length %></h5>
                <h5 class="text-capitalize"><b class="text-info">Breed Size: </b><%= @breed.breed_size %></h5>

            </div>
            <div class="d-md-flex mt-5 text-center">
                <%= link_to "Back to Categories", categories_path, class: "btn btn-primary mb-2 me-auto" %>
                <%= link_to "Back to Breeds", breeds_path, class: "btn btn-primary mb-2" %>
            </div>
        </div>
    </div>
</div>